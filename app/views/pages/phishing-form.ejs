<%- include('../partials/head') %>
<form style="visibility: hidden;" action="/transfer" method="post">
  <input
    type="text"
    name="username"
    value="<%=username%>"
  />
  <input
    type="text"
    name="itemId"
    value="<%=itemId%>"
  />
  <input
    type="number"
    name="amount"
    value="<%=amount%>"
  />
  <input type="submit" value="submit" />
</form>
<script>
  window.onload = () => {
    document.forms[0].submit();
  }
</script>
